@{
    ViewBag.Title = "User App";
}
@model IEnumerable<User>
<style>
    td, th {
        padding: 20px;
    }

    .top {
        display: flex;
        justify-content: space-around;
    }

    table {
        font-size: 20px;
    }
</style>
<div class="top">
    <div class="top_1">
        <a asp-controller="Account" asp-action="Register">Новый пользователь</a>
    </div>
    <div class="top_2">
        <a asp-controller="Admin" asp-action="AdminPanel">Панель администратора</a>
    </div>
    <div class="top_2">
        <a asp-controller="Account" asp-action="Logout">Выйти из учётной записи</a>
    </div>
</div>


<div>
    <h3>Users</h3>
    <from method="post">
        <table>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Age</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var b in ViewBag.Users)
            {

                <tr>
                    <td>@b.Name</td>
                    <td>@b.Surname</td>
                    <td>@b.Age</td>
                    <td><a asp-controller="Home" asp-action="UsersEdit" asp-route-id="@b.Id">Редактировать</a></td>
                    <td><a asp-controller="Home" asp-action="UsersDelete" asp-route-id="@b.Id">Удалить</a></td>
                </tr>
            }
        </table>
    </from>
</div>